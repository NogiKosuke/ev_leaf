<h1>ユーザ管理画面</h1>
<br>
<%= link_to '新規作成',new_admin_user_path %>
<br>
<table>
    <tr>
      <th class>ID</th>
      <th class>名前</th>
      <th class>メールアドレス</th>
      <th class>登録タスク数</th>
      <th class>権限</th>
      <th>メニュー</th>
      <th></th>
      <th></th>
    </tr>
  
    <% @users.each do |user| %>
      <tr class = 'user_row'>
        <td><%= user.id%></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.tasks.count %>個</td>
        <td><%= user.admin %></td>
        <td><%= link_to "マイページへ",user_path(user.id, admin: "true") %></td>
        <td><%= link_to "編集", edit_admin_user_path(user.id) %></td>
        <td><%= link_to "削除", admin_user_path(user.id), method: :delete, data: { confirm: '本当に削除しますか？'} %></td>
      </tr>
    <% end %>
  </table>
